<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td>
          <button class="btn btn-default"><%= link_to 'Show', post %></button>
        </td>
        <td>
          <button class="btn btn-default"><%= link_to 'Edit', edit_post_path(post) %></button>
        </td>
        <td>
          <button class="btn btn-default"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-default"><%= link_to 'New Post', new_post_path %></button>
